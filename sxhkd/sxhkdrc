# wm independent hotkeys
#
# terminal emulator
shift + alt + Return
	alacritty
# program launcher
Super_L
	rofi -show &
#~/.config/polybar/scripts/menu

# make sxhkd reload its configuration files:
alt + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit/restart bspwm
alt + shift + {KP_Delete,F5}
	bspc {quit,wm -r}

# close and kill
alt + {BackSpace}
	bspc node -{c}

# alternate between the tiled and monocle layout
alt + f
	bspc desktop -l next 
	#bspc node -t ~fullscreen
# send the newest marked node to the newest preselected node
alt + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
alt + g
	bspc node -s biggest.tiled.local

#
# state/flags
#

# set the window state
alt + {t,shift + t}
	bspc node -t {tiled,pseudo_tiled}

alt + s
  bspc node focused.tiled -t floating || bspc node focused.floating -t tiled

# set the node flags
alt + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#
alt + {_, shift +, ctrl +}{h,j,k,l}
	~/.config/sxhkd/focusswap.sh {f,s,n} {west,south,north,east}

# focus the node in the given direction
alt + {_, shift +, ctrl +}{Left,Down,Up,Right}
	~/.config/sxhkd/focusswap.sh {f,s,n} {west,south,north,east}


#
#	bspc node -s {west,south,north,east} -f

# focus the node for the given path jump
alt + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
alt + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
alt + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
alt + {Tab,grave}
	bspc {desktop,node} -f last

# focus the older or newer node in the focus history
alt + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
#alt + {_,shift + }{1-9,0}
#	bspc {desktop -f,node -d} '^{1-9,10}'

alt + {_,shift + }{1-9,0}
	~/.config/sxhkd/monitorfocus.sh {"desktop -f", "node -d"} {1-9,10} 

#~/bspc.sh {1-9,10}
#D={1-9,0}; 
